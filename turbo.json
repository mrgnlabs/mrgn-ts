{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "clean": {
      "cache": false
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "start": {
      "cache": false
    }
  },
  "globalEnv": [
    "NODE_ENV",
    "NEXT_PUBLIC_MARGINFI_ENVIRONMENT",
    "NEXT_PUBLIC_MARGINFI_RPC_ENDPOINT_OVERRIDE",
    "NEXT_PUBLIC_MARGINFI_GROUP_OVERRIDE",
    "NEXT_PUBLIC_MARGINFI_FEATURES_AIRDROP",
    "NEXT_PUBLIC_MARGINFI_FEATURES_CREATE_CAMPAIGN",
    "AUTHENTICATION_DISABLED",
    "AUTHENTICATION_USERNAME",
    "AUTHENTICATION_PASSWORD",
    "MARGINFI_ENV",
    "MARGINFI_RPC_ENDPOINT",
    "MARGINFI_PROGRAM",
    "MARGINFI_GROUP",
    "MARGINFI_WALLET_KEY",
    "MARGINFI_WALLET",
    "ANCHOR_WALLET"
  ]
}
