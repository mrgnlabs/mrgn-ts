{
  "name": "@diaelctlabs/monitoring-service-template",
  "version": "0.1.0",
  "author": "dialectlabs",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "start:local-dev": "dotenv -e .env.local-dev -e .env.service -- nest start --watch",
    "start:local-dev:debug": "dotenv -e .env.local-dev -e .env.service -- nest start --debug --watch",
    "start:dev": "dotenv -e .env.dev -e .env.service -- nest start --watch",
    "start:dev:debug": "dotenv -e .env.dev -e .env.service -- nest start --debug --watch",
    "start:prod": "dotenv -e .env.prod -e .env.service -- nest start --watch",
    "start:prod:debug": "dotenv -e .env.prod -e .env.service -- nest start --debug --watch",
    "start:docker": "node dist/main | pino-pretty --config .pino-prettyrc.json"
  },
  "dependencies": {
    "@dialectlabs/blockchain-sdk-solana": "^1.2.0",
    "@dialectlabs/monitor": "^3.4.2",
    "@dialectlabs/sdk": "^1.9.1",
    "@nestjs/axios": "^3.0.2",
    "@nestjs/cache-manager": "^2.2.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^4.0.2",
    "@nestjs/terminus": "^10.2.3",
    "bn.js": "^5.2.1",
    "cache-manager": "^5.5.2",
    "lodash": "^4.17.21",
    "luxon": "^3.4.4",
    "nestjs-pino": "^4.0.0",
    "pino-http": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "reflect-metadata": "^0.2.0",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bn.js": "^5.1.5",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/lodash": "^4.17.0",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.3.1",
    "@types/source-map-support": "^0.5.10",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
